#Set-ExecutionPolicy  (note if this dosnt work you need to manualy Set-ExecutionPolicy, you can use "Set-ExecutionPolicy unrestricted" but you must remeber to set it back to "Set-ExecutionPolicy restricted" for security purposes. 
# ------------------------------------------------------
Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1'))
Clear-Host
$ErrorActionPreference = "SilentlyContinue"
Set-TimeZone "AUS Eastern Standard Time"
# ------------------------------------------------------
# Get rid of stupid "are you sure, are you realy sure, are you realy realy sure windows nag screen when installing stuff... (this is optional) 
# ------------------------------------------------------
New-ItemProperty -Path HKLM:Software\Microsoft\Windows\CurrentVersion\policies\system -Name EnableLUA -PropertyType DWord -Value 0 -Force
# ------------------------------------------------------
# install chocolatey apps
# ------------------------------------------------------
choco feature enable -n allowGlobalConfirmation
Write-Host "Installing Chrome"
choco install googlechrome -y
Write-Host "Installing Visual Studio Code"
choco install vscode -y
Write-Host "Installing Registry Workshop"
choco install registryworkshop -y
Write-Host "Installing NodeJS"
choco install nodejs -y
Write-Host "Installing Termite"
choco install termite -y

Write-Host "Java JDK"
choco install jdk8  -y
#Write-Host "Android Studio"
#choco install androidstudio -y

Write-Host "Installing Appium"
choco install appium-desktop -y


# ------------------------------------------------------
# the rest of the script gets rid of bloatware.
# ------------------------------------------------------
Get-AppxPackage -AllUsers | Remove-AppxPackage

